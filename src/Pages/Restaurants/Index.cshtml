@page
@using ContosoCrafts.WebSite.Services
@inject JsonFileProductService ProductService
@model IndexModel
@{
    ViewData["Title"] = "Restaurants Index";
}
<!-- Search form -->
<div class="container">
    <form class="form-inline" method="get">
        <input asp-for="SearchTerm" class="form-control my-3 mr-2" type="search" placeholder="Search" aria-label="Search" />
        <button class="btn btn-search my-3 my-sm-0" type="submit">Search</button>
    </form>
</div>

<div class="container">
    <a class="btn btn-primary mb-3" href="/Restaurants/Create" role="button">CREATE</a>
    <ul class="list-group">
        @foreach (var product in Model.Products)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <h5>@product.Title</h5>
                <a class="btn btn-primary" href="/Restaurants/Detail/@product.Id" role="button">DETAIL</a>
            </li>
        }
    </ul>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">